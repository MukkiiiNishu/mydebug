package com.example.plugin;

import com.intellij.openapi.project.Project;
import com.intellij.xdebugger.breakpoints.ui.XBreakpointConditionComboBoxProvider;
import org.jetbrains.annotations.NotNull;
import org.jetbrains.annotations.Nullable;

import javax.swing.*;
import java.util.Arrays;
import java.util.List;

public class CustomConditionProvider extends XBreakpointConditionComboBoxProvider {
    
    private static final List<String> SUGGESTIONS = Arrays.asList(
            "This is from Plugin",
            "var == null",
            "var > 10",
            "var.contains(\"test\")"
    );

    @Nullable
    @Override
    public JComboBox<String> getConditionComboBox(@NotNull Project project) {
        JComboBox<String> comboBox = new JComboBox<>();
        SUGGESTIONS.forEach(comboBox::addItem);
        return comboBox;
    }
}


<extensions defaultExtensionNs="com.intellij">
    <xbreakpointConditionProvider implementation="com.example.plugin.CustomConditionProvider"/>
</extensions>
